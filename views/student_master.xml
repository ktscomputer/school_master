<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="student_master_list">
        <field name="name">student.master.list</field>
        <field name="model">student.master</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_name" readonly="is_locked"/>
                <field name="student_gender" readonly="is_locked"/>
                <field name="student_class" readonly="is_locked"/>
                <field name="student_class_name" readonly="is_locked"/>
                <field name="student_guardian" readonly="is_locked"/>
                <field name="student_contact2" readonly="is_locked"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="student_master_form">
        <field name="name">student.master.form</field>
        <field name="model">student.master</field>
        <field name="arch" type="xml">
          <form create="true" edit="true"> <!-- js_class="student_master_form">-->
                <header>
                    <button name="action_save" type="object" string="Confirm" class="oe_highlight" invisible="is_locked"/>
                    <button name="action_edit" type="object" string="Reset to draft" invisible="not is_locked"/>
                    <button name="action_new_receipt" string="New Student" type="object" class="btn-success"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                    <field name="is_locked" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="row align-items-center py-3" style="min-height:100px; border-bottom: 2px solid #000;">
                        <div class="col-6 d-flex align-items-center">
                            <div class="me-3">
                                <field name="company_logo" widget="image" class="o_logo_company"
                                       style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                       alt="Company Logo" readonly="1"/>
                            </div>
                            <div>
                                <h5 class="m-0 fw-bold text-dark">
                                    <field name="company_id"/>
                                </h5>
                            </div>
                        </div>
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                STUDENT MASTER
                            </h3>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <group>
                                <field name="name"/>
                                <field name="student_name" required="1"/>
                                <field name="student_gender"/>
                                <field name="dob" class="oe_inline"/>
                                <field name="age" readonly="1" class="oe_inline"/>
                                <field name="student_class" options="{'no_create': True, 'no_open': True}"/>
                                <field name="student_class_name" options="{'no_create': True, 'no_open': True}"/>
                                <field name="student_division" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </div>
                        <div class="col-4">
                            <group>
                                <field name="student_guardian"/>
                                <field name="student_add"/>
                                <field name="pincode"/>
                                <field name="student_contact2"/>
                                <field name="student_contact1"/>
                            </group>
                        </div>
                        <div class="col-4">
                            <group>
                                <field name="student_img" widget="image" style="width: 128px; height: 128px;"/>
                                <field name="teacher_id"/>
                                <field name="aadhaar_card"/>
                                <field name="current_balance" string='Fee Pending :'/>
                                <button name="action_pay_now" type="object" string="Pay Now" class="oe_highlight"
                                        invisible="current_balance &lt;= 0"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page string="Exam Details">
                            <field name="exam_ids" readonly="1">
                                <list options="{'no_open': True}">
                                    <field name="student_id" readonly="1"/>
                                    <field name="exam_name_id" readonly="1"/>
                                    <field name="exam_subject_id" readonly="1"/>
                                    <field name="exam_total_mark" readonly="1"/>
                                    <field name="obtained_mark" readonly="1"/>
                                    <field name="grade" readonly="1"/>
                                    <field name="grade_point" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Transportation Details" readonly="1" invisible="student_trans != 'school_bus'">
                            <field name="transport_ids">
                                <list>
                                    <field name="student_id" readonly="1"/>
                                    <field name="student_trans" readonly="1"/>
                                    <field name="transport_mode" readonly="1"/>
                                    <field name="transportation_fee" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Monthly Fees" invisible="student_trans != 'school_bus'">
                            <field name="monthly_fee_ids">
                                <list editable="bottom">
                                    <field name="month"/>
                                    <field name="amount"/>
                                    <field name="due_date"/>
                                    <field name="state"/>
                                    <field name="payment_date"/>
                                    <field name="notes"/>
                                    <button name="mark_as_paid" string="Mark Paid" type="object" class="oe_highlight"
                                            states="unpaid,late"/>
                                </list>
                            </field>
                        </page>
                        <page string="Invoice Details">
                            <field name="fee_invoice_ids" readonly="1">
                                <list options="{'no_open': True}">
                                    <field name="invoice_date"/>
                                    <field name="student_id"/>
                                    <field name="course_id"/>
                                    <field name="year_id"/>
                                    <field name="amount"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                        <page string="Receipt Details">
                            <field name="fee_receipt_ids" readonly="1">
                                <list options="{'no_open': True}">
                                    <field name="name"/>
                                    <field name="payment_date"/>
                                    <field name="student_id" readonly="is_locked"/>
                                    <field name="amount"/>
                                    <field name="reference"/>
                                    <field name="payment_method" readonly="is_locked"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="student_master_kanban">
        <field name="name">student.master.kanban</field>
        <field name="model">student.master</field>
        <field name="arch" type="xml">
            <kanban default_group_by="student_class_name"> <!--js_class="student_master_kanban">-->
                <field name="student_name"/>
                <field name="student_gender"/>
                <field name="student_class"/>
                <field name="student_class_name"/>
                <field name="student_division"/>
                <field name="student_roll_number"/>
                <field name="student_guardian"/>
                <field name="student_add1"/>
                <field name="student_add2"/>
                <field name="student_add3"/>
                <field name="student_contact1"/>
                <field name="student_img"/>
                <field name="teacher_id" options="{'no_open': True}"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="student-master-kanban">
                                <img t-if="record.student_img.raw_value"
                                     t-attf-src="/web/image/student.master/#{record.id.raw_value}/student_img"
                                     class="oe_kanban_image student-photo" alt="Student Photo"/>
                                <div class="oe_kanban_details">
                                    <h4 style="color: red; text-align: center;">
                                        <b><field name="student_name"/></b>
                                    </h4>
                                    <div>Admission Number: <field name="name"/></div>
                                    <div>Gender: <field name="student_gender"/></div>
                                    <div>Year: <field name="student_class"/></div>
                                    <div>Course: <field name="student_class_name"/></div>
                                    <div>Batch: <field name="student_division"/></div>
                                    <div>Guardian: <field name="student_guardian"/></div>
                                    <div>Contact: <field name="student_contact2"/></div>
                                    <div>Class Teacher: <field name="teacher_id"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_student_master" model="ir.actions.act_window">
        <field name="name">Student Master</field>
        <field name="res_model">student.master</field>
        <field name="view_mode">kanban,form,list</field>
          <field name="view_id" ref="student_master_kanban"/>
    </record>
</odoo>