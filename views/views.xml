<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="exam_result_list">
            <field name="name">school list</field>
            <field name="model">exam.result</field>
            <field name="arch" type="xml">
                <list>
                       <field name="student_id"/>
                            <field name="exam_name_id"/>
                            <field name="exam_subject_id"/>
                            <field name="exam_total_mark"/>
                            <field name="obtained_mark"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="exam_result_form">
            <field name="name">Exam Entry</field>
            <field name="model">exam.result</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    <button name="action_save" type="object" string="Save"
                            class="oe_highlight"
                            invisible="is_locked"/>
                    <button name="action_edit" type="object" string="Edit"
                            invisible="not is_locked"/>
                    <field name="is_locked" invisible="1"/>
                </header>
                    <sheet>
                         <div class=" row oe_title">
                        <div class="col-3 student-master-header">
                            <img src="/school_master/static/description/icon.png"
                                 alt="Student Icon" style="width: 100px; height: 100px;"/>
                        </div>
                        <div class="col-9 student-master-header">
                            <h4 style="color: red; text-align: center;">
                                <b>EXAM MASTER</b>
                            </h4>
                        </div>
                    </div>
                        <hr/>
                        <group>
                            <field name="student_id" readonly="is_locked"/>
                            <field name="exam_name_id" readonly="is_locked"/>
                            <field name="exam_subject_id" readonly="is_locked"/>
                            <field name="exam_total_mark" readonly="is_locked"/>
                            <field name="obtained_mark" readonly="is_locked"/>
                            <field name="grade"  readonly="is_locked"/>
                            <field name="grade_point" readonly="is_locked"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="exam_result_action_window">
            <field name="name">Exam window</field>
            <field name="res_model">exam.result</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Top menu item -->

        <menuitem name="School Master" id="school_master_root" web_icon="school_master,static/description/webicon.png"/>

        <!-- actions -->

        <menuitem name="Exam Master" id="school_exam_menu_list" parent="school_master_root"
                  action="exam_result_action_window"
                  sequence="30"/>

    </data>
</odoo>
