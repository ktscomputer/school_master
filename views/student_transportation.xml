<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="student_transportation_list">
        <field name="name">student.master.list</field>
        <field name="model">student.transportation</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id" readonly="is_locked"/>
                <field name="student_trans" readonly="is_locked"/>
                <field name="transport_mode" readonly="is_locked"/>
            </list>
        </field>
    </record>
    <record model="ir.ui.view" id="student_transportation_form">
        <field name="name">student.master.form</field>
        <field name="model">student.transportation</field>
        <field name="arch" type="xml">
            <form create="true" edit="true" style="background-color:#a4d7ed;">
                <header>
                    <button name="action_save" type="object" string="Save"
                            class="oe_highlight"
                            invisible="is_locked"/>
                    <button name="action_edit" type="object" string="Edit"
                            invisible="not is_locked"/>
                    <field name="is_locked" invisible="1"/>
                </header>
                <sheet>
                    <div class=" row oe_title">
                        <div class="col-3 student-master-header">
                            <img src="/school_master/static/description/school_bus.png"
                                 alt="Student Icon" style="width: 150px; height: 100px;"/>
                        </div>
                        <div class="col-9 student-master-header">
                            <h4 style="color: red; text-align: center;">
                                <b>TRANSPORTATION MASTER</b>
                            </h4>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-6">
                            <group>
                                <field name="student_id" readonly="is_locked"/>
                                <field name="basic_fee" readonly="is_locked"/>
                                <field name="student_trans" readonly="is_locked"/>
                                <field name="transport_mode" readonly="is_locked"/>
                                <field name="transportation_fee" readonly="1"/>
                            </group>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_student_transportation" model="ir.actions.act_window">
        <field name="name">Transportation Master</field>
        <field name="res_model">student.transportation</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_student_transport_root" name="Transport Master" parent="school_master_root"
              sequence="40"/>
    <menuitem id="menu_student_transport" name="Transport" parent="menu_student_transport_root"
              action="action_student_transportation" sequence="10"/>
</odoo>