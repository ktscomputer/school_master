<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="student_fee_receipt_list">
        <field name="name">Student Fee</field>
        <field name="model">student.fee.receipt</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="payment_date"/>
                <field name="course_id"/>
                <field name="year_id"/>
                <field name="student_id" readonly="is_locked"/>
                <field name="amount"/>
                <field name="reference"/>
                <field name="payment_method" readonly="is_locked"/>
            </list>
        </field>
    </record>
    <record model="ir.ui.view" id="student_fee_receipt_form">
        <field name="name">Student Fee</field>
        <field name="model">student.fee.receipt</field>
        <field name="arch" type="xml">
            <form create="false" edit="true">
                <header>
                    <button name="action_save" type="object" string="Confirm"
                            class="oe_highlight"
                            invisible="is_locked"/>
                    <button name="action_edit" type="object" string="Rest to draft"
                            invisible="not is_locked"/>
                    <field name="is_locked" invisible="1"/>

                    <button name="action_new_receipt" string="New Receipt" type="object"
                            class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>


                </header>
                <sheet>

                    <div class="row align-items-center py-3" style="min-height:100px; border-bottom: 2px solid #000;">
                        <!-- Left Side: Company Logo & Name -->
                        <div class="col-6 d-flex align-items-center">
                            <div class="me-3">
                                <field name="company_logo" widget="image" class="o_logo_company"
                                       style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                       alt="Company Logo" readonly="1"/>
                            </div>
                            <div>
                                <h5 class="m-0 fw-bold text-dark">
                                    <field name="company_id"/>
                                </h5>
                            </div>
                        </div>

                        <!-- Right Side: Student Master Title -->
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                RECEIPT
                            </h3>
                        </div>
                    </div>

                    <div class="row" style="margin-top:20px;background-colour:grey;">
                        <div class="col-6">
                            <group>
                                <field name="name"/>
                                <field name="payment_date" readonly="is_locked"
                                       modifiers="{'readonly': [('state','=','confirmed')]}"/>
                                <field name="course_id" readonly="is_locked"
                                       modifiers="{'readonly': [('state','=','confirmed')]}"
                                       options="{'no_open': True}"/>
                                <field name="year_id" readonly="is_locked"
                                       modifiers="{'readonly': [('state','=','confirmed')]}"
                                       options="{'no_open': True}"/>
                                <field name="student_id"
                                       domain="[('student_class_name','=',course_id), ('student_class','=',year_id)]"
                                       options="{'no_create': True, 'no_open': True}"
                                      readonly="is_locked"/>
                                <field name="amount" readonly="is_locked"
                                       modifiers="{'readonly': [('state','=','confirmed')]}"/>
                                <field name="reference" modifiers="{'readonly': [('state','=','confirmed')]}"
                                       readonly="is_locked"/>
                                <field name="payment_method" readonly="is_locked"
                                       modifiers="{'readonly': [('state','=','confirmed')]}"
                                       options="{'no_open': True}"/>
                            </group>
                        </div>
                    </div>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_student_fee_receipt" model="ir.actions.act_window">
        <field name="name">Receipt Details</field>
        <field name="res_model">student.fee.receipt</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->

</odoo>